<ul>
    <li>
        <form role="search" method="get" class="search-form" action="{{=URL('index')}}"> 
            <label>
                <span class="screen-reader-text">搜索:</span>
                    <input type="search" class="search-field form-control search" placeholder="搜索 …" value="" name="s" title="搜索:"> 
                    <span class="icon icon-search"></span>
            </label> 
            <input type="submit" id="searchform-submit" class="search-submit" value="搜索">
        </form>
    </li>
</ul>
{{if not db(db.webadmin).isempty():}}
<span id='_cookie_block_1' class='upds_cookie_policy'>
    <h3 class="sidebar-title ads-title">关于我们</h3>
    <div class="photo-thumb ads">
          {{about=db(db.webadmin).select().first()}}
          <div class="pic"><a href="{{=URL('about',args=1)}}"><img src="=URL('uploads',about.pic)"></a></div>
          <div class="text">
              {{if about.description:}}
                  <h4>{{=A(about.description)}}</h4>
              {{else:}}
               <a></a>
              {{pass}}
          </div>
    </div>
</span>
{{pass}}
{{if not db(db.categories).isempty():}}
<h4 class="sidebar-title"><span class="icon icon-bucket"></span>作品类别</h4>
<ul class="nav-category">
     {{for categorie in db().select(db.categories.ALL):}}
            <li> <a href="{{=URL('categorie',args=[categorie.id,1])}}" title="{{=categorie.name}}">{{=categorie.name}}</a></li>
     {{pass}}
</ul>
{{pass}}
